<?xml version = "1.0"?>
<odoo>
    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate_property_offer.tree</field>
        <field name="model">estate_property_offer</field>
        <field name="arch" type="xml">
            <tree string = "Estate Property Offers">
                <field name="price"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <button name="accept_offer" type="object" icon="fa-check"/>
                <button name="delete_offer" type="object" icon="fa-close"/>
                <field name="status"/>
            </tree>
        </field>
    </record>
</odoo>
